{
  "manifest_version": 3,
  "name": "Zoom Simplified",
  "version": "0.1",
  "description": "Zoom In and Out, simplified. From 100% to 125%.",
  "icons": {
    "48": "css&ico/icon-dark.png"
  },
  "permissions": [
    "tabs",
    "activeTab",
    "storage"
  ],
  "action": {
    "default_icon": {
      "48": "css&ico/icon-dark.png"
    },
    "default_title": "Zoom Simplified"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "zoonsimplified@soulhotel.net"
    }
  }
}
